@model DoAn.Models.TblMenu

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Xoá menu</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">General Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- Full width column -->
                <div class="col-12">
                    <!-- Changed to full width -->
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Xoá menu</h3>
                        </div>
                        <!-- /.card-header -->
                        
                            
                            <div class="card-body">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-group">
                                    <label for="exampleInputPassword1">Tên:</label>
                                    @Html.DisplayFor(Model => Model.Name)
                                </div>
                                
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Liên kết:</label>
                                    @Html.DisplayFor(Model => Model.Link)
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputPassword1">Mục tiêu:</label>
                                    @Html.DisplayFor(Model => Model.Target)
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputPassword1">Mô tả:</label>
                                    @Html.DisplayFor(Model => Model.Description)
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputPassword1">Trạng thái:</label>
                                    @Html.DisplayFor(Model => Model.Status)
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputPassword1">Vị trí:</label>
                                    @Html.DisplayFor(Model => Model.Position)
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputPassword1">Hiện:</label>
                                    @Html.DisplayFor(Model => Model.Status)
                                </div>

                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="Id"/>
                                    <input type="submit" value="Xoá" class="btn btn-danger" />
                                    <a asp-action="Index" class="btn btn-primary">Quay lại</a>
                                </form>
                            </div>

                    </div>
                    <!-- /.card -->
                </div>
                <!--/.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
